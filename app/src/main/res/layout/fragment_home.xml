<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lin_home"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/banner"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="105dp"
                android:paddingRight="10dp"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="23sp"
                android:fontFamily="@font/arkhip"
                android:background="@drawable/half_rounded_left"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginEnd="10dp"
                android:textColor="@color/colorBlack"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/desc"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorBrown"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moch. Star Ramadhan"
            android:fontFamily="@font/roonasans"
            android:gravity="right"
            android:layout_gravity="right"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/orange4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~ Complicated Inside"
            android:fontFamily="@font/roonasans"
            android:gravity="right"
            android:layout_gravity="right"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/orange4"/>
         </LinearLayout>
        <LinearLayout
            android:id="@+id/interest"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBrown"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="20dp"
                android:paddingRight="10dp"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Interest"
                android:textSize="23sp"
                android:fontFamily="@font/arkhip"
                android:background="@drawable/half_rounded_left"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginEnd="10dp"
                android:textColor="@color/colorBlack"
                />
            <TextView
                android:layout_marginTop="35dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Cycling"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/roonasans"
                android:background="@drawable/half_rounded_right"
                android:layout_gravity="left"
                android:gravity="center"
                android:textColor="@color/colorBrown"
                />
            <TextView
                android:layout_marginTop="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Design"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/roonasans"
                android:background="@drawable/half_rounded_right"
                android:layout_gravity="left"
                android:gravity="center"
                android:textColor="@color/colorBrown"
                />
            <TextView
                android:layout_marginTop="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Horror Movie"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/roonasans"
                android:background="@drawable/half_rounded_right"
                android:layout_gravity="left"
                android:gravity="center"
                android:textColor="@color/colorBrown"
                />
            <TextView
                android:layout_marginTop="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Gaming"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/roonasans"
                android:background="@drawable/half_rounded_right"
                android:layout_gravity="left"
                android:gravity="center"
                android:textColor="@color/colorBrown"
                />
        </LinearLayout>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileBackground"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/circle_border" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileBorder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="35dp"
        android:src="@drawable/circle_background"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePict"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/profil"/>
</RelativeLayout>