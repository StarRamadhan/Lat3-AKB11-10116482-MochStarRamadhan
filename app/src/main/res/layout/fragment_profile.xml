<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lin_home"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/banner"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/desc"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorBrown"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moch. Star Ramadhan"
            android:fontFamily="@font/roonasans"
            android:gravity="right"
            android:layout_gravity="center"
            android:paddingTop="25dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/orange4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Software Engineering"
            android:fontFamily="@font/roonasans"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/orange1"/>
         </LinearLayout>
        <LinearLayout
            android:id="@+id/interest"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBrown"
            android:weightSum="5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textSize="23sp"
                    android:fontFamily="@font/arkhip"
                    android:background="@drawable/half_rounded_left"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorBlack"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_daily"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="55dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgLine"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_line_24dp"
                        />
                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:id="@+id/imgWhatsapp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_whatsapp_24dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="55dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgFacebook"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_facebook_24dp"
                        />
                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:id="@+id/imgMaps"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_maps_24dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/appVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apps Version"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/orange4"
                />
        </LinearLayout>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileBackground"
        android:layout_centerHorizontal="true"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/circle_border" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileBorder"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/circle_background"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePict"
        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/profil"/>
</RelativeLayout>